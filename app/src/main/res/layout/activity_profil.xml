<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/blue"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/kukuh"
        app:civ_border_width="2dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="arial"
        android:layout_marginTop="10dp"
        android:text="Kukuh Sri Aji"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:fontFamily="arial"
        android:layout_marginTop="60dp"
        android:text="Jurusan : Sistem Informasi"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:fontFamily="arial"
        android:layout_marginTop="90dp"
        android:text="Kelas : 303"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:fontFamily="arial"
        android:layout_marginTop="120dp"
        android:text="NPM : 10417098"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:fontFamily="arial"
        android:layout_marginTop="150dp"
        android:text="Tujuan Aplikasi Pembelajaran ini:\n- Meningkatkan minat belajar pada siswa tingkat SD dengan pembelajaran yang interaktif.\n- Sebagai alat bantu belajar, sehingga dapat menambah minat dan motivasi belajar, serta memberikan peningkatan pengetahuan dan pemahaman mengenai pengelompokan hewan secara lengkap"
        android:textSize="20dp"
        android:textColor="@color/black"/>

</RelativeLayout>